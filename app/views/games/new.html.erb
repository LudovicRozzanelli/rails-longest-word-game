<h1>New game</h1>
<ul>
<% @letters.each do |letter| %>
<li><%= letter.capitalize %></li>
<% end %>
</ul>
<p>What is the longest word you can find?</p>
<form class="row g-3" action="/score" method="POST" data-turbo="false">
  <div class="col-auto">
    <input  type="text" name="word" type="password" class="form-control" id="inputPassword2">
    <button type="submit" class="btn btn-primary mb-3" value="play">play</button>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
